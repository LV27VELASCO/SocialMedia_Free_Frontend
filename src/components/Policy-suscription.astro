---
import { useI18n } from '../i18n';
const { translate, currentLang } = useI18n(Astro);
const generalBenefits = translate('subscription.general.benefits.items') as unknown as {
  title: string;
  text: string;
}[];
const info = translate('subscription.general.info.items') as unknown as {
  title: string;
  text: string;
}[];
const benefits = translate('subscription.benefits.items') as unknown as {}[]
const client = translate('subscription.unsubscribe.client.item') as unknown as {}[]
const company = translate('subscription.unsubscribe.company.item') as unknown as {}[]
const cancel = translate('subscription.cancel.items') as unknown as {}[]
---
<!-- Main Content -->
<section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {/* Page Title */}
    <div class="text-center mb-12 animate-fade-in">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
            {translate('subscription.title')} <span class="gradient-text">{translate('subscription.title.span')}</span>
        </h1>
        <p class="text-xl text-gray-300">{translate('subscription.date')}</p>
    </div>

    {/* Content */}
    <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 md:p-12 space-y-8">

        {/* Section 1 */}
        <section>
            <h2 class="text-2xl font-bold text-purple-400 mb-4">1. {translate('subscription.general.title')}</h2>
            <p class="text-gray-300 leading-relaxed mb-4">{translate('subscription.general.text1')}</p>
            <ul class="space-y-3 text-gray-300 ml-6">
                {
                    generalBenefits.map((item)=>(
                         <li class="flex items-start">
                            <span class="text-green-400 mr-2">✓</span>
                            <span><strong>{item.title}</strong> {item.text}</span>
                        </li>
                    ))
                }
            </ul>

            <div class="mt-6 p-4 bg-purple-500/10 border border-purple-400/30 rounded-lg">
                {
                    info.map((item)=>(
                        <p class="text-gray-300 leading-relaxed mb-3">
                            <strong class="text-purple-300">{item.title}</strong> {item.text}
                        </p>
                    ))
                }
            </div>

            <p class="text-gray-300 leading-relaxed mt-4">{translate('subscription.general.text2')}</p>
        </section>

        {/* Section 2 */}
        <section>
            <h2 class="text-2xl font-bold text-purple-400 mb-4">2. {translate('subscription.info.title')}</h2>
            <p class="text-gray-300 leading-relaxed">{translate('subscription.info.text')}</p>
        </section>

        {/* Section 3 */}
        <section>
            <h2 class="text-2xl font-bold text-purple-400 mb-4">3. {translate('subscription.benefits.title')}</h2>
            <ul class="list-disc space-y-3 text-gray-300 ml-6">
                {
                    benefits.map((item)=>(
                        <li class="flex items-start">
                            <span class="text-blue-400 mr-2">•</span>
                            <span>{item}</span>
                        </li>
                    ))
                }
            </ul>
            <p class="text-gray-300 leading-relaxed mt-4">{translate('subscription.benefits.text')}</p>
        </section>

        {/* Section 4 */}
        <section>
            <h2 class="text-2xl font-bold text-purple-400 mb-4">4. {translate('subscription.unsubscribe.title')}</h2>

            <h3 class="text-xl font-semibold text-purple-300 mb-3 mt-4">{translate('subscription.unsubscribe.client.title')}</h3>
            <p class="text-gray-300 leading-relaxed mb-3">{translate('subscription.unsubscribe.client.text')}</p>
            <ul class="space-y-2 text-gray-300 ml-6 mb-4">
                {
                    client.map((item)=>(
                        <li class="flex items-start">
                            <span class="text-green-400 mr-2">→</span>
                            <span>{item}</span>
                        </li>
                    ))
                }
            </ul>

            <h3 class="text-xl font-semibold text-purple-300 mb-3 mt-4">{translate('subscription.unsubscribe.company.title')}</h3>
            <p class="text-gray-300 leading-relaxed mb-3">{translate('subscription.unsubscribe.company.text')}</p>
            <ul class="space-y-2 text-gray-300 ml-6 mb-4">
                {
                    company.map((item)=>(
                        <li class="flex items-start">
                            <span class="text-red-400 mr-2">✕</span>
                            <span>{item}</span>
                        </li>
                    ))
                }
            </ul>
            <p class="text-gray-300 leading-relaxed mb-4">{translate('subscription.unsubscribe.company.notice')}</p>

            <h3 class="text-xl font-semibold text-purple-300 mb-3 mt-4">{translate('subscription.unsubscribe.effects.title')}</h3>
            <p class="text-gray-300 leading-relaxed">{translate('subscription.unsubscribe.effects.text')}</p>
        </section>

        {/* Section 5 */}
        <section>
            <h2 class="text-2xl font-bold text-purple-400 mb-4">5. {translate('subscription.cancel.title')}</h2>
            <p class="text-gray-300 leading-relaxed mb-4">{translate('subscription.cancel.text1')}</p>
            <ol class="space-y-3 text-gray-300 ml-6 list-decimal">
                {
                    cancel.map((item)=>(
                        <li>
                            {item}
                        </li>
                    ))
                }
            </ol>
            <p class="text-gray-300 leading-relaxed mt-4">{translate('subscription.cancel.text2')}</p>
            <p class="text-gray-300 leading-relaxed mt-4">{translate('subscription.cancel.text3')}</p>
        </section>

        {/* Section 6 */}
        <section>
            <h2 class="text-2xl font-bold text-purple-400 mb-4">6. {translate('subscription.contact.title')}</h2>
            <p class="text-gray-300 leading-relaxed mb-4">{translate('subscription.contact.text')}</p>
            <div class="bg-purple-500/10 border border-purple-400/30 rounded-lg p-4 space-y-2">
                <p class="text-gray-300">
                    <strong class="text-purple-300">{translate('subscription.contact.email.title')}</strong> 
                    <a href="mailto:contact@trendyup.es" class="text-blue-400 hover:text-blue-300 underline">{translate('subscription.contact.email.text')}</a>
                </p>
                <p class="text-gray-300">
                    <strong class="text-purple-300">{translate('subscription.contact.address.title')}</strong> {translate('subscription.contact.address.text')}
                </p>
            </div>
        </section>

        {/* Section 7 */}
        <section>
            <h2 class="text-2xl font-bold text-purple-400 mb-4">7. {translate('subscription.withdrawal.title')}</h2>
            <p class="text-gray-300 leading-relaxed mb-4">{translate('subscription.withdrawal.text1')}</p>
            <p class="text-gray-300 leading-relaxed mb-4">{translate('subscription.withdrawal.text2')}</p>
            <div class="bg-yellow-500/10 border border-yellow-400/30 rounded-lg p-4">
                <p class="text-gray-300 leading-relaxed mb-3">
                    <strong class="text-yellow-300">{translate('subscription.withdrawal.notice1.title')}</strong> {translate('subscription.withdrawal.notice1.text')}
                </p>
                <p class="text-gray-300 leading-relaxed">{translate('subscription.withdrawal.notice2.text')}</p>
            </div>
        </section>

        {/* Section 8 */}
        <section>
            <h2 class="text-2xl font-bold text-purple-400 mb-4">8. {translate('subscription.prices.title')}</h2>
            <p class="text-gray-300 leading-relaxed">{translate('subscription.prices.text')}</p>
        </section>

    </div>

    {/* Related Links */}
    <div class="mt-8 text-center">
        <p class="text-gray-400 mb-4">{translate('subscription.related.title')}</p>
        <div class="flex flex-wrap justify-center gap-4">
            <a href={`/${currentLang}/terms`} class="text-purple-400 hover:text-purple-300 underline">{translate('subscription.related.terms')}</a>
            <a href={`/${currentLang}/privacity`} class="text-purple-400 hover:text-purple-300 underline">{translate('subscription.related.privacy')}</a>
            <a href={`/${currentLang}/refund-policy`} class="text-purple-400 hover:text-purple-300 underline">{translate('subscription.related.refund')}</a>
        </div>
    </div>

</section>

<!-- Scroll to Top Button -->
<button id="scrollToTop"
    class="fixed  bottom-8 right-8 w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-full shadow-lg hover:scale-110 transform transition-all duration-300 opacity-0 pointer-events-none z-50">
    ↑
</button>
<script is:inline>
        // Scroll to top functionality
        const scrollToTopBtn = document.getElementById('scrollToTop');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                scrollToTopBtn.style.opacity = '1';
                scrollToTopBtn.style.pointerEvents = 'auto';
            } else {
                scrollToTopBtn.style.opacity = '0';
                scrollToTopBtn.style.pointerEvents = 'none';
            }
        });
        
        scrollToTopBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add entrance animations to sections
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all sections
        document.querySelectorAll('section').forEach(section => {
            section.style.opacity = '0';
            section.style.transform = 'translateY(20px)';
            section.style.transition = 'all 0.6s ease-out';
            observer.observe(section);
        });
</script>