---
import { useI18n } from '../i18n';
const { translate, currentLang } = useI18n(Astro);
---
<section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">
      {translate('refund.title')} <span class="gradient-text">{translate('refund.title.span')}</span>
    </h1>
    <p class="text-gray-300 text-sm">{translate('refund.date')}</p>
  </div>

  <!-- Content -->
  <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 md:p-12 space-y-8">

    <!-- Introduction -->
    <section>
      <p class="text-gray-200 leading-relaxed">{translate('refund.intro.text')}</p>
    </section>

    <!-- Order Cancellations -->
    <section>
      <h2 class="text-2xl font-bold text-purple-400 mb-4">{translate('refund.cancelations.title')}</h2>
      <p class="text-gray-200 leading-relaxed mb-4">{translate('refund.cancelations.text')}</p>
      <ul class="space-y-2 text-gray-200 ml-6">
        <li class="flex items-start">
          <span class="text-purple-400 mr-2">•</span>
          <span>{translate('refund.cancelations.list1')}</span>
        </li>
        <li class="flex items-start">
          <span class="text-purple-400 mr-2">•</span>
          <span>{translate('refund.cancelations.list2')}</span>
        </li>
        <li class="flex items-start">
          <span class="text-purple-400 mr-2">•</span>
          <span>{translate('refund.cancelations.list3')}</span>
        </li>
      </ul>
    </section>

    <!-- 24-Hour Trial -->
    <section>
      <h2 class="text-2xl font-bold text-purple-400 mb-4">{translate('refund.trial.title')}</h2>
      <p class="text-gray-200 leading-relaxed mb-4">{translate('refund.trial.text')}</p>
      <div class="bg-purple-500/10 border border-purple-400/30 rounded-lg p-4 mb-4">
        <p class="text-purple-300 font-semibold mb-2">{translate('refund.trial.infoTitle')}</p>
        <ul class="space-y-2 text-gray-200 ml-6">
          <li class="flex items-start">
            <span class="text-purple-400 mr-2">•</span>
            <span>{translate('refund.trial.list1')}</span>
          </li>
          <li class="flex items-start">
            <span class="text-purple-400 mr-2">•</span>
            <span>{translate('refund.trial.list2')}</span>
          </li>
        </ul>
      </div>
      <p class="text-gray-300 italic">{translate('refund.trial.note')}</p>
    </section>

    <!-- 14-Day Guarantee -->
    <section>
      <h2 class="text-2xl font-bold text-purple-400 mb-4">{translate('refund.guarantee.title')}</h2>
      <p class="text-gray-200 leading-relaxed mb-4">{translate('refund.guarantee.text')}</p>

      <!-- Eligible Reasons -->
      <div class="bg-green-500/10 border border-green-400/30 rounded-lg p-4 mb-4">
        <p class="text-green-400 font-semibold mb-3 flex items-center">
          <span class="mr-2">✅</span>
          {translate('refund.guarantee.eligibleTitle')}
        </p>
        <ul class="space-y-2 text-gray-200 ml-6">
          <li class="flex items-start"><span class="text-green-400 mr-2">•</span> {translate('refund.guarantee.eligible.list1')}</li>
          <li class="flex items-start"><span class="text-green-400 mr-2">•</span> {translate('refund.guarantee.eligible.list2')}</li>
          <li class="flex items-start"><span class="text-green-400 mr-2">•</span> {translate('refund.guarantee.eligible.list3')}</li>
          <li class="flex items-start"><span class="text-green-400 mr-2">•</span> {translate('refund.guarantee.eligible.list4')}</li>
        </ul>
      </div>

      <!-- Ineligible Reasons -->
      <div class="bg-red-500/10 border border-red-400/30 rounded-lg p-4">
        <p class="text-red-400 font-semibold mb-3 flex items-center">
          <span class="mr-2">❌</span>
          {translate('refund.guarantee.ineligibleTitle')}
        </p>
        <ul class="space-y-2 text-gray-200 ml-6">
          <li class="flex items-start"><span class="text-red-400 mr-2">•</span> {translate('refund.guarantee.ineligible.list1')}</li>
          <li class="flex items-start"><span class="text-red-400 mr-2">•</span> {translate('refund.guarantee.ineligible.list2')}</li>
          <li class="flex items-start"><span class="text-red-400 mr-2">•</span> {translate('refund.guarantee.ineligible.list3')}</li>
        </ul>
      </div>
    </section>

    <!-- How to Request -->
    <section>
      <h2 class="text-2xl font-bold text-purple-400 mb-4">{translate('refund.request.title')}</h2>
      <p class="text-gray-200 leading-relaxed mb-4">{translate('refund.request.text')}</p>
      <div class="space-y-4">
        <div class="bg-white/5 border border-white/10 rounded-lg p-4">
          <p class="text-purple-300 font-semibold mb-1">📧 {translate('refund.request.email.title')}</p>
          <a href="mailto:contact@trendyup.es" class="text-blue-400 hover:text-blue-300 transition-colors">{translate('refund.request.email.text')}</a>
        </div>
        <div class="bg-white/5 border border-white/10 rounded-lg p-4">
          <p class="text-purple-300 font-semibold mb-1">💬 {translate('refund.request.chat.title')}</p>
          <p class="text-gray-300">{translate('refund.request.chat.text')}</p>
        </div>
        <div class="bg-white/5 border border-white/10 rounded-lg p-4">
          <p class="text-purple-300 font-semibold mb-2">📮 {translate('refund.request.post.title')}</p>
          <p class="text-gray-300 leading-relaxed">{translate('refund.request.post.text')}</p>
        </div>
      </div>
      <div class="mt-6 bg-purple-500/10 border border-purple-400/30 rounded-lg p-4">
        <p class="text-gray-200 leading-relaxed">{translate('refund.request.info1')}</p>
        <p class="text-gray-200 leading-relaxed mt-2">{translate('refund.request.info2')}</p>
      </div>
    </section>

    <!-- Additional Information -->
    <section>
      <h2 class="text-2xl font-bold text-purple-400 mb-4">{translate('refund.additional.title')}</h2>
      <ul class="space-y-2 text-gray-200">
        <li class="flex items-start"><span class="text-purple-400 mr-2">•</span> {translate('refund.additional.list1')}</li>
        <li class="flex items-start"><span class="text-purple-400 mr-2">•</span> {translate('refund.additional.list2')}</li>
        <li class="flex items-start"><span class="text-purple-400 mr-2">•</span> {translate('refund.additional.list3')}</li>
      </ul>
    </section>

    <!-- Support Hours -->
    <section>
      <h2 class="text-2xl font-bold text-purple-400 mb-4">{translate('refund.support.title')}</h2>
      <div class="bg-white/5 border border-white/10 rounded-lg p-4">
        <p class="text-gray-200"><span class="text-purple-400 font-semibold">{translate('refund.support.text')}</span></p>
      </div>
      <p class="text-gray-300 mt-4 italic">{translate('refund.support.text2')}</p>
    </section>
    
  </div>
</section>


<!-- Scroll to Top Button -->
<button id="scrollToTop"
    class="fixed  bottom-8 right-8 w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-full shadow-lg hover:scale-110 transform transition-all duration-300 opacity-0 pointer-events-none z-50">
    ↑
</button>
<script is:inline>
        // Scroll to top functionality
        const scrollToTopBtn = document.getElementById('scrollToTop');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                scrollToTopBtn.style.opacity = '1';
                scrollToTopBtn.style.pointerEvents = 'auto';
            } else {
                scrollToTopBtn.style.opacity = '0';
                scrollToTopBtn.style.pointerEvents = 'none';
            }
        });
        
        scrollToTopBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add entrance animations to sections
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all sections
        document.querySelectorAll('section').forEach(section => {
            section.style.opacity = '0';
            section.style.transform = 'translateY(20px)';
            section.style.transition = 'all 0.6s ease-out';
            observer.observe(section);
        });
</script>