---
import { useI18n } from '../i18n';
const { translate, currentLang } = useI18n(Astro);
const testimonials = translate('testimonials.items') as unknown as {
  avatar: string;
  name: string;
  username: string;
  text: string;
}[];
---

<!-- Testimonials -->
<!-- Adding testimonials carousel section -->
<section class="py-16 overflow-hidden animate-slide-up">
        <div class="container mx-auto px-8 mb-12">
            <h2 class="gradient-text text-4xl sm:text-5xl font-bold text-center mb-4">{translate('testimonials.title')}</h2>
            <p class="text-center text-purple-200 text-lg">{translate('testimonials.subtitle')}</p>
        </div>

        <div class="testimonials-container relative">
            <div class="flex gap-6 animate-scroll">
                {testimonials.map((item)  => (
                    <div class="flex-shrink-0 w-96 bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
                        <div class="flex items-center gap-3 mb-4">
                        <div class="w-12 h-12 bg-gradient-to-br from-purple-400/50 to-blue-400/50 rounded-full flex items-center justify-center text-2xl">
                            {item.avatar}
                        </div>
                        <div>
                            <div class="font-semibold">{item.name}</div>
                            <div class="text-sm text-purple-300">{item.username}</div>
                        </div>
                        </div>
                        <p class="text-purple-100 leading-relaxed">
                        {item.text}
                        </p>
                        <div class="flex gap-1 mt-4 text-yellow-400">
                        ⭐⭐⭐⭐⭐
                        </div>
                    </div>
                    ))
                }
            </div>
        </div>
</section>