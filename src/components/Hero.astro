---
import imageHero from "../assets/ImagenHero.jpg";
import { useI18n } from '../i18n';
const { translate, currentLang } = useI18n(Astro);
---
 <!-- Hero Section -->
 <section id="inicio" class="relative py-20 lg:py-24 max-w-7xl mx-auto">
     <div class="container mx-auto px-4 sm:px-6">
         <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

             <!-- Left Content -->
             <div class="animate-fade-in ">
                 <h1 class="text-5xl sm:text-6xl font-bold text-white mb-6 leading-tight">
                     {translate('hero.title')}<br>
                     <span class="gradient-text">{translate('hero.title.span')}</span><br>
                     {translate('hero.title2')}
                 </h1>

                 <p class="text-xl text-gray-300 mb-8 leading-relaxed ">
                     {translate('hero.subtitle')}
                 </p>
                 <!-- Platform Buttons -->
                 <div class="flex flex-col sm:flex-row gap-4 mb-12">
                     <a href="insta"
                         class="px-8 py-4 btn-primary text-white font-semibold rounded-full text-lg flex items-center justify-center space-x-2">
                         <span>📸</span>
                         <span>{translate('hero.platform.insta')}</span>
                     </button>
                     <a href="ttok"
                         class="px-8 py-4 btn-secondary text-white font-semibold rounded-full text-lg flex items-center justify-center space-x-2">
                         <span>🎵</span>
                         <span>{translate('hero.platform.ttok')}</span>
                    </a>
                 </div>

                 <!-- Trust Indicators -->
                 <div class="grid grid-cols-3 gap-6">
                     <div class="text-center">
                         <div class="text-3xl mb-2">🚫</div>
                         <p class="text-sm text-gray-400">{translate('hero.trust.nobots.title')}<br>{translate('hero.trust.nobots.title2')}</p>
                     </div>
                     <div class="text-center">
                         <div class="text-3xl mb-2">🔒</div>
                         <p class="text-sm text-gray-400">{translate('hero.trust.secure.title')}<br>{translate('hero.trust.secure.title2')}</p>
                     </div>
                     <div class="text-center">
                         <div class="text-3xl mb-2">⭐</div>
                         <p class="text-sm text-gray-400">{translate('hero.trust.satisfied.title')}<br>{translate('hero.trust.satisfied.title2')}</p>
                     </div>
                 </div>
             </div>

             <!-- Right Visual Content -->
             <div class="animate-slide-up space-y-6">

                 <!-- Main Image Card -->
                 <div class="glass-card rounded-3xl p-4 overflow-hidden">
                     <div class="relative rounded-2xl overflow-hidden" style="height: 400px;">
                         <img src={imageHero.src}
                             alt="Content creator" class="w-full h-full object-cover" />
                         <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                         <div class="absolute bottom-6 left-6 right-6">
                             <div class="glass-card rounded-xl p-4">
                                 <div class="flex items-center justify-between">
                                     <div>
                                         <p class="text-white font-semibold text-lg">{translate('hero.card.main.title')}</p>
                                         <p class="text-gray-300 text-sm">{translate('hero.card.main.subtitle')}</p>
                                     </div>
                                     <div class="text-3xl">✨</div>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </div>

                 <!-- Metrics Row -->
                 <div class="grid grid-cols-2 gap-4">

                     <!-- Metric Card 1 -->
                     <div class="metric-card rounded-2xl p-5">
                        
                         <div class="flex items-center justify-between mb-3">
                             <span class="text-2xl">📈</span>
                             <span class="text-green-400 text-sm font-semibold">+245%</span>
                         </div>
                         <h3 class="text-white font-semibold text-sm mb-1">{translate('hero.metrics.reach.title')}</h3>
                         <p class="text-gray-400 text-xs">{translate('hero.metrics.reach.period')}</p>
                     </div>

                     <!-- Metric Card 2 -->
                     <div class="metric-card rounded-2xl p-5">
                         <div class="flex items-center justify-between mb-3">
                             <span class="text-2xl">💬</span>
                             <span class="text-purple-400 text-sm font-semibold">8.5%</span>
                         </div>
                         <h3 class="text-white font-semibold text-sm mb-1">{translate('hero.metrics.engagement.title')}</h3>
                         <p class="text-gray-400 text-xs">{translate('hero.metrics.engagement.period')}</p>
                     </div>

                 </div>

                 <!-- Bottom Highlight Card -->
                 <div
                     class="metric-card rounded-2xl p-6 bg-gradient-to-br from-orange-500/20 to-blue-500/20 border-orange-500/30">
                     <div class="flex items-center justify-between">
                         <div>
                             <h3 class="text-white font-semibold text-lg mb-2">{translate('hero.bottom.title')}</h3>
                             <p class="text-gray-300 text-sm">{translate('hero.bottom.subtitle')}</p>
                         </div>
                         <div class="text-5xl">📊</div>
                     </div>
                 </div>

             </div>

         </div>
     </div>
 </section>