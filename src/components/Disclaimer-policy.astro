---
import { useI18n } from '../i18n';
const { translate } = useI18n(Astro);
const items: readonly string[] = translate('disclaimer.compliance.items') as readonly string[];
---
<section class="relative z-10 container mx-auto px-6 sm:px-10 py-20 lg:py-24">
        <!-- Header -->
        <div class="text-center mb-12 animate-fade-in">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 gradient-text">{translate('disclaimer.title')}</h1>
            <p class="text-purple-300 text-lg">{translate('disclaimer.date')}</p>
        </div>

        <!-- Content Container -->
        <div class="bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl p-8 md:p-12 space-y-8 animate-fade-in">
            
            <!-- Interpretación y Definiciones -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.definitions.title')}</h2>
                
                <h3 class="text-xl font-semibold mb-3 mt-6">{translate('disclaimer.definitions.interpretation.title')}</h3>
                <p class="text-gray-300 leading-relaxed">
                    {translate('disclaimer.definitions.interpretation.text')}
                </p>

                <h3 class="text-xl font-semibold mb-3 mt-6">{translate('disclaimer.definitions.definitions.title')}</h3>
                <ul class="space-y-3 text-gray-300">
                    <li><strong class="text-white">{translate('disclaimer.definitions.definitions.company.title')}</strong> {translate('disclaimer.definitions.definitions.company.text')}</li>
                    <li><strong class="text-white">{translate('disclaimer.definitions.definitions.service.title')}</strong> {translate('disclaimer.definitions.definitions.service.text')}</li>
                    <li><strong class="text-white">{translate('disclaimer.definitions.definitions.user.title')}</strong> {translate('disclaimer.definitions.definitions.user.text')}</li>
                    <li><strong class="text-white">{translate('disclaimer.definitions.definitions.website.title')}</strong> {translate('disclaimer.definitions.definitions.website.text')} <a href="https://www.trendyup.es" target="_blank" class="text-purple-400 hover:text-purple-300 underline">{translate('disclaimer.definitions.definitions.website.span')}</a></li>
                </ul>
            </section>

            <div class="border-t border-white/10"></div>

            <!-- Disclaimer General -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.title')}</h2>
                <p class="text-gray-300 leading-relaxed">
                    {translate('disclaimer.general.text')}
                </p>
            </section>

            <div class="border-t border-white/10"></div>

            <!-- Cumplimiento de Plataforma -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.compliance.title')}</h2>
                {
                    items.map((item)=>(
                        <p class="text-gray-300 leading-relaxed mb-4">
                            {item}
                        </p>
                    ))
                }
            </section>

            <div class="border-t border-white/10"></div>

            <!-- Enlaces Externos -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.externalLinks.title')}</h2>
                <p class="text-gray-300 leading-relaxed">
                    {translate('disclaimer.externalLinks.text')}
                </p>
            </section>

            <div class="border-t border-white/10"></div>

            <!-- Errores y Omisiones -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.errors.title')}</h2>
                <p class="text-gray-300 leading-relaxed">
                    {translate('disclaimer.errors.text')}
                </p>
            </section>

            <div class="border-t border-white/10"></div>

            <!-- Uso Justo -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.fairUse.title')}</h2>
                <p class="text-gray-300 leading-relaxed">
                    {translate('disclaimer.fairUse.text')}
                </p>
            </section>

            <div class="border-t border-white/10"></div>

            <!-- Opiniones Expresadas -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.opinions.title')}</h2>
                <p class="text-gray-300 leading-relaxed">
                    {translate('disclaimer.opinions.text')}
                </p>
            </section>

            <div class="border-t border-white/10"></div>

            <!-- Descargo de Responsabilidad de Resultados -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.results.title')}</h2>
                <p class="text-gray-300 leading-relaxed">
                    {translate('disclaimer.results.text')}
                </p>
            </section>

            <div class="border-t border-white/10"></div>

            <!-- Uso Bajo Su Propia Responsabilidad -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.responsibility.title')}</h2>
                <p class="text-gray-300 leading-relaxed">
                    {translate('disclaimer.responsibility.text')}
                </p>
            </section>

            <div class="border-t border-white/10"></div>

            <!-- Contacto -->
            <section>
                <h2 class="text-2xl font-bold mb-4 text-purple-300">{translate('disclaimer.contact.title')}</h2>
                <p class="text-gray-300 leading-relaxed mb-4">
                    {translate('disclaimer.contact.intro')}
                </p>
                <ul class="space-y-2 text-gray-300">
                    <li><strong class="text-white">{translate('disclaimer.contact.email.title')}</strong> <a href="mailto:contact@trendyup.es" class="text-purple-400 hover:text-purple-300 underline">{translate('disclaimer.contact.email.text')}</a></li>
                    <li><strong class="text-white">{translate('disclaimer.contact.website.title')}</strong> <a href="https://www.trendyup.es" target="_blank" class="text-purple-400 hover:text-purple-300 underline">{translate('disclaimer.contact.website.text')}</a></li>
                    <li><strong class="text-white">{translate('disclaimer.contact.phone.title')}</strong> {translate('disclaimer.contact.phone.text')}</li>
                    <li><strong class="text-white">{translate('disclaimer.contact.address.title')}</strong> {translate('disclaimer.contact.address.text')}</li>
                </ul>
            </section>

        </div>
</section>

<button id="scrollToTop"
    class="fixed  bottom-8 right-8 w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-full shadow-lg hover:scale-110 transform transition-all duration-300 opacity-0 pointer-events-none z-50">
    ↑
</button>

<script is:inline>
        // Scroll to top functionality
        const scrollToTopBtn = document.getElementById('scrollToTop');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                scrollToTopBtn.style.opacity = '1';
                scrollToTopBtn.style.pointerEvents = 'auto';
            } else {
                scrollToTopBtn.style.opacity = '0';
                scrollToTopBtn.style.pointerEvents = 'none';
            }
        });
        
        scrollToTopBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add entrance animations to sections
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all sections
        document.querySelectorAll('section').forEach(section => {
            section.style.opacity = '0';
            section.style.transform = 'translateY(20px)';
            section.style.transition = 'all 0.6s ease-out';
            observer.observe(section);
        });
</script>