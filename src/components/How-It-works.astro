---
import { useI18n } from '../i18n';
const { translate, currentLang } = useI18n(Astro);
const items = translate('howitworks.steps') as unknown as {
  title: string;
  icon: string;
  text: string;
}[];
---

<section id="HowItWorks" class="pt-20 grid place-content-center">
    <div class="container mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-fade-in">
            <h2 class="text-4xl sm:text-5xl font-bold text-white mb-6">
                {translate('howitworks.title')} <span class="gradient-text">{translate('howitworks.span')}</span>?
            </h2>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto">
               {translate('howitworks.subtitle')}
            </p>
        </div>

        <!-- Steps Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16 max-w-7xl">

            {items.map((item, index) => (
                <div class="step-card card-hover rounded-2xl p-6 text-center animate-slide-up bg-white/10 backdrop-blur-lg border border-white/20"
                style={`animation-delay: ${0.1 * (index + 1)}s;`}>
                <div class="step-number w-16 h-16 rounded-full flex items-center justify-center text-white font-bold text-2xl mx-auto mb-6">
                    {index + 1}
                </div>
                <div class="text-4xl mb-4">{item.icon}</div>
                <h3 class="text-xl font-bold text-white mb-4">{item.title}</h3>
                <p class="text-gray-300 text-sm">{item.text}</p>
                </div>
            ))}
        </div>
    </div>
</section>