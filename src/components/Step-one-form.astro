<script is:inline>


    // Form submission handler
    document.getElementById("leadForm").addEventListener("submit", function (e) {
            e.preventDefault();

            // Get form data
            const nombre = document.getElementById("nombre").value;
            const email = document.getElementById("email").value;

            // Simple validation
            if (!nombre || !email) {
                alert("Por favor completa todos los campos");
                return;
            }

            
            // Get new form data
            const redSocial = document.getElementById('redSocial').value;
            const accion = document.getElementById('accion').value;
            const url = document.getElementById('url').value;

            // Enhanced validation
            if (!redSocial) {
                alert('Por favor selecciona una red social');
                return;
            }

            if (!accion) {
                alert('Por favor selecciona qué quieres aumentar');
                return;
            }

            if (!url) {
                alert('Por favor ingresa la URL de tu perfil o publicación');
                return;
            }

            // URL format validation
            const urlLower = url.toLowerCase();
            let validUrl = false;

            switch (redSocial) {
                case 'instagram':
                    validUrl = urlLower.includes('instagram.com');
                    break;
                case 'facebook':
                    validUrl = urlLower.includes('facebook.com');
                    break;
                case 'tiktok':
                    validUrl = urlLower.includes('tiktok.com');
                    break;
            }

            const messageErr = document.getElementById('message1');

            if (!validUrl) {
                messageErr.textContent = `Por favor ingresa una URL válida de ${redSocial.charAt(0).toUpperCase() + redSocial.slice(1)}`;
                messageErr.className = "text-red-300 text-center text-sm bg-red-500/20 p-4 rounded-xl border border-red-400/30";
                return;
            }

            // Show loading state
            const button = this.querySelector('button[type="submit"]');
            const originalText = button.innerHTML;
            button.innerHTML =
                '<span class="flex items-center justify-center space-x-2"><span class="animate-spin">⏳</span><span>Procesando...</span></span>';
            button.disabled = true;

            // Crear JSON con los datos del formulario
            const formData = {
                nombre: nombre,
                email: email,
                redSocial: redSocial,
                accion: accion,
                url: url,
                fecha: new Date().toISOString()
            };

            // Get form data
            document.getElementById("nombre").value ='';
            document.getElementById("email").value ='';
            document.getElementById('redSocial').value ='';
            document.getElementById('accion').value ='';
            document.getElementById('url').value ='';

            localStorage.setItem("Register", JSON.stringify(formData));

            // Simulate form processing
            setTimeout(() => {
                window.location.href = "validate-card";

                // Reset button
                button.innerHTML = originalText;
                button.disabled = false;
            }, 2000);
        });

    // Input animations
    const inputs = document.querySelectorAll("input");
    inputs.forEach((input) => {
        input.addEventListener("focus", function () {
            this.parentElement.style.transform = "scale(1.02)";
        });

        input.addEventListener("blur", function () {
            this.parentElement.style.transform = "scale(1)";
        });
    });


    const selectAction = document.getElementById("accion");
    const labelUrl = document.getElementById("urlLabel");

    function actualizarLabel() {
        const accion = selectAction.value;
        if (accion === 'followers') {
            labelUrl.innerText = 'URL de tu perfil';
        } else if(accion === 'likes' ||accion === 'views') {
            labelUrl.innerText = 'URL de tu publicación';
        }else{
            labelUrl.innerText = 'URL';
        }
    }

    // Cambiar texto al cargar la página
    actualizarLabel();

    // Cambiar texto cada vez que el usuario seleccione algo distinto
    selectAction.addEventListener('change', actualizarLabel);



    // Add floating animation to form on load
    window.addEventListener("load", function () {
        localStorage.removeItem("Register")
    });
</script>
