---
const { id = "followersModal" } = Astro.props;
---

<div id={id} class="hidden fixed inset-0 z-[60] flex items-center justify-center bg-black/50 backdrop-blur-sm">
    <div
        class="mx-4 w-full max-w-2xl h-[90%] overflow-y-scroll bg-white/10 backdrop-blur-lg rounded-2xl border border-white/20 p-8 animate-scale-in">

        <!-- Added close button in top-right corner -->
        <button onclick="closeModal()"
            class="close-button absolute top-4 right-4 w-10 h-10 flex items-center justify-center rounded-full bg-white/10 hover:bg-red-500/20 border border-white/20 hover:border-red-400 text-white hover:text-red-400 text-xl font-bold transition-all z-10"
            aria-label="Cerrar modal">
            ×
        </button>

        <!-- Modal Header -->
        <div class="text-center mb-8">
            <div class="text-6xl mb-4">🚀</div>
            <h2 class="text-3xl font-bold text-white mb-2">¡Casi Listo!</h2>
            <p class="text-gray-300">
                Elige un objetivo de seguidores
            </p>
        </div>

        <!-- Selected Platform Info -->
        <div class="bg-white/5 rounded-xl p-4 mb-6 flex items-center justify-center space-x-3">
            <span class="text-2xl" id="modal-platform-icon">🎵</span>
            <span class="text-white font-medium">Usuario: <span id="modal-username" class="text-blue-300">
                </span>
            </span>
        </div>

        <form id="formFollowers" class="space-y-4">
            <!-- Followers Selection -->
            <div>
                <p class="block text-white font-medium mb-4 text-center">
                    👥 ¿Cual es tu objetivo de seguidores?
                </p>
                <div id="PriceInsta" class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-8 pt-6">
                    <!-- 250 Followers -->
                    <button type="button" onclick="selectFollowers(250)"
                        class="followers-option pricing-card rounded-2xl p-5 text-center cursor-pointer">
                        <div class="text-4xl font-bold text-white mb-2">250</div>
                        <div class="text-blue-300 text-xs font-semibold mb-3 uppercase tracking-wider">Basic</div>
                        <div class="flex items-center justify-center gap-2 mb-2">
                            <span class="text-2xl font-bold text-green-400">2.4€</span>
                            <span class="text-sm text-gray-400 line-through">4.9€</span>
                        </div>
                        <div class="savings-badge inline-block px-3 py-1 rounded-full text-xs font-bold text-white">-50%
                        </div>
                    </button>

                    <!-- 500 Followers -->
                    <button type="button" onclick="selectFollowers(500)"
                        class="followers-option pricing-card rounded-2xl p-5 text-center cursor-pointer">
                        <div class="text-4xl font-bold text-white mb-2">500</div>
                        <div class="text-blue-300 text-xs font-semibold mb-3 uppercase tracking-wider">Basic</div>
                        <div class="flex items-center justify-center gap-2 mb-2">
                            <span class="text-2xl font-bold text-green-400">3.9€</span>
                            <span class="text-sm text-gray-400 line-through">7.9€</span>
                        </div>
                        <div class="savings-badge inline-block px-3 py-1 rounded-full text-xs font-bold text-white">-50%
                        </div>
                    </button>

                    <!-- 1K Followers -->
                    <button type="button" onclick="selectFollowers(1000)"
                        class="followers-option pricing-card rounded-2xl p-5 text-center cursor-pointer">
                        <div class="text-4xl font-bold text-white mb-2">1K</div>
                        <div class="text-blue-300 text-xs font-semibold mb-3 uppercase tracking-wider">Starter</div>
                        <div class="flex items-center justify-center gap-2 mb-2">
                            <span class="text-2xl font-bold text-green-400">5.9€</span>
                            <span class="text-sm text-gray-400 line-through">13€</span>
                        </div>
                        <div class="savings-badge inline-block px-3 py-1 rounded-full text-xs font-bold text-white">-55%
                        </div>
                    </button>

                    <!-- 2.5K Followers -->
                    <button type="button" onclick="selectFollowers(2500)"
                        class="followers-option pricing-card rounded-2xl p-5 text-center cursor-pointer">
                        <div class="text-4xl font-bold text-white mb-2">2.5K</div>
                        <div class="text-blue-300 text-xs font-semibold mb-3 uppercase tracking-wider">Standard</div>
                        <div class="flex items-center justify-center gap-2 mb-2">
                            <span class="text-2xl font-bold text-green-400">12.9€</span>
                            <span class="text-sm text-gray-400 line-through">26€</span>
                        </div>
                        <div class="savings-badge inline-block px-3 py-1 rounded-full text-xs font-bold text-white">-50%
                        </div>
                    </button>

                    <!-- 5K Followers (POPULAR) -->
                    <button type="button" onclick="selectFollowers(5000)"
                        class="followers-option pricing-card popular rounded-2xl p-5 text-center cursor-pointer relative overflow-visible">
                        <div
                            class="badge absolute top-1 left-1/2 transform -translate-x-1/2 bg-gradient-to-r from-blue-500/80 to-purple-500/80 text-white text-xs font-bold px-4 py-1 rounded-full uppercase tracking-wide shadow-lg whitespace-nowrap">
                            Más Popular
                        </div>
                        <div class="text-4xl font-bold gradient-text mb-2">5K</div>
                        <div class="text-blue-300 text-xs font-semibold mb-3 uppercase tracking-wider">Popular</div>
                        <div class="flex items-center justify-center gap-2 mb-2">
                            <span class="text-2xl font-bold text-green-400">21.9€</span>
                            <span class="text-sm text-gray-400 line-through">45€</span>
                        </div>
                        <div class="savings-badge inline-block px-3 py-1 rounded-full text-xs font-bold text-white">-51%
                        </div>
                    </button>

                    <!-- 10K Followers -->
                    <button type="button" onclick="selectFollowers(10000)"
                        class="followers-option pricing-card rounded-2xl p-5 text-center cursor-pointer">
                        <div class="text-4xl font-bold text-white mb-2">10K</div>
                        <div class="text-purple-300 text-xs font-semibold mb-3 uppercase tracking-wider">Premium</div>
                        <div class="flex items-center justify-center gap-2 mb-2">
                            <span class="text-2xl font-bold text-green-400">39.9€</span>
                            <span class="text-sm text-gray-400 line-through">85€</span>
                        </div>
                        <div class="savings-badge inline-block px-3 py-1 rounded-full text-xs font-bold text-white">-53%
                        </div>
                    </button>

                    <!-- 20K Followers -->
                    <button type="button" onclick="selectFollowers(20000)"
                        class="followers-option pricing-card rounded-2xl p-5 text-center cursor-pointer">
                        <div class="text-4xl font-bold text-white mb-2">20K</div>
                        <div class="text-purple-300 text-xs font-semibold mb-3 uppercase tracking-wider">Premium</div>
                        <div class="flex items-center justify-center gap-2 mb-2">
                            <span class="text-2xl font-bold text-green-400">69.9€</span>
                            <span class="text-sm text-gray-400 line-through">160€</span>
                        </div>
                        <div class="savings-badge inline-block px-3 py-1 rounded-full text-xs font-bold text-white">-56%
                        </div>
                    </button>

                    <!-- 25K Followers -->
                    <button type="button" onclick="selectFollowers(25000)"
                        class="followers-option pricing-card rounded-2xl p-5 text-center cursor-pointer">
                        <div class="text-4xl font-bold text-white mb-2">25K</div>
                        <div class="text-yellow-300 text-xs font-semibold mb-3 uppercase tracking-wider">VIP</div>
                        <div class="flex items-center justify-center gap-2 mb-2">
                            <span class="text-2xl font-bold text-green-400">84.9€</span>
                            <span class="text-sm text-gray-400 line-through">200€</span>
                        </div>
                        <div class="savings-badge inline-block px-3 py-1 rounded-full text-xs font-bold text-white">-58%
                        </div>
                    </button>

                </div>
                <input type="hidden" id="selectedFollowers" name="followers" required />
            </div>

            <!-- Email Input -->
            <div>
                <label for="modalEmail" class="block text-white font-medium mb-2">
                    📧 Tu Email
                </label>
                <input type="email" id="modalEmail" name="email" placeholder="tu@email.com"
                    class="w-full px-4 py-3 bg-white/20 border border-white/30 rounded-xl text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300"
                    required />
            </div>

            <div class="bg-green-500/20 border border-green-500/30 rounded-xl p-4">
                <div class="flex items-start space-x-3">
                    <p class="text-green-300 text-sm">
                        Para compartir y gestionar tu solicitud de manera efectiva, tu perfil debe estar configurado
                        como
                        público. Esto permite que nuestra red global de creadores, plataformas móviles y comunidades
                        puedan
                        acceder y potenciar la visibilidad de tu contenido.
                    </p>
                </div>
            </div>

            <p id="message-atention"
                class="hidden text-yellow-300 text-sm bg-yellow-500/20 p-4 rounded-xl border border-yellow-400/30"></p>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <button type="submit"
                    class="flex-1 px-6 py-3 bg-gradient-to-r from-blue-500 via-purple-500 to-indigo-500 text-white font-bold rounded-xl hover:scale-105 transform transition-all duration-300 shadow-2xl">
                    🚀 Continuar
                </button>
            </div>

            <!-- Benefits -->
            <div class="bg-white/20 border border-white/30 rounded-xl p-4 space-y-4">

                <div class="bg-blue-500/20 border border-blue-500/30 rounded-xl p-4">
                    <p><strong>TrendyUp</strong> opera en total conformidad con las políticas de TikTok, Instagram y
                        Google Ads. Nuestro método excluye la automatización, las interacciones artificiales y
                        cualquier acceso indebido a las cuentas de los usuarios.</p>
                </div>
                <div class="bg-blue-500/20 border border-blue-500/30 rounded-xl p-4">
                    <p>Potenciamos la visibilidad de tu perfil compartiendo tu contenido de manera directa con una
                        red global que reúne creadores auténticos, plataformas móviles, comunidades temáticas e
                        influencers. El volumen contratado definirá tu nivel de exposición en estas colaboraciones.
                    </p>
                </div>

                <div class="bg-gray-500/20 border border-gray-500/30 rounded-xl p-4">
                    <h3 class="text-gray-200 font-semibold mb-2 flex items-center">
                        <span class="mr-2">📄</span>
                        Aviso legal:
                    </h3>
                    <ul class="text-gray-300 text-sm space-y-1">
                        <li>El nivel de visibilidad está marcado por la calidad del contenido, su pertinencia en la
                            audiencia y la consistencia al compartirlo. TrendyUp facilita herramientas para impulsarla,
                            sin garantizar resultados concretos en métricas como seguidores o participación.</li>
                    </ul>
                </div>

            </div>
        </form>
    </div>
</div>
<script is:inline>
    // Variables para el modal de seguidores
    let selectedFollowersCount = null;
    let selectedPlatform = 'instagram'; // Default platform
    // Form Seguidores Submit
     document.getElementById('formFollowers').addEventListener('submit', async function(e) {
        e.preventDefault();
        const email = document.getElementById('modalEmail').value.trim();
        const username = document.getElementById('usernameInput').value.trim();
        const error = document.getElementById('message-atention');
        if (!selectedFollowersCount) {
            error.classList.remove("hidden")
            error.innerText = "⚠️ Por favor selecciona tu objetivo de seguidores"
            setTimeout(() => {
                error.classList.add("hidden")
            }, 5000);
            return;
        }
        if (!email) {
            error.classList.remove("hidden")
            error.innerText = "⚠️ Por favor, ingresa tu email"
            setTimeout(() => {
                error.classList.add("hidden")
            }, 5000);
            return;
        }
        // Clean username
        const cleanUsername = username.startsWith('@') ? username.slice(1) : username;
        // Store all data
        localStorage.setItem('orderData', JSON.stringify({
            username: cleanUsername,
            platform: selectedPlatform,
            followers: selectedFollowersCount,
            email: email,
            timestamp: new Date().toISOString()
        }));
        // Close followers modal and open payment modal
        closeModal();
        await openPaymentModal();
    });
    
    // Smooth scrolling for navigation
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
    // Función para seleccionar cantidad de seguidores
    function selectFollowers(count) {
        selectedFollowersCount = count;
        
        document.getElementById('selectedFollowers').value = count;
        // Remove active class from all options
        document.querySelectorAll('.followers-option').forEach(card => {
            card.classList.remove('selected');
        });
        // Add selected class to clicked card
      event.currentTarget.classList.add('selected');
    }

    // Función para cerrar el modal de seguidores
    function closeModal() {
        document.getElementById('followersModal').classList.add('hidden');
        document.body.classList.remove('overflow-hidden');
        // Reset form
        document.getElementById('formFollowers').reset();
        selectedFollowersCount = null;
        // Remove active classes
        document.querySelectorAll('.followers-option').forEach(card => {
           card.classList.remove('selected');
        });
    }
</script>