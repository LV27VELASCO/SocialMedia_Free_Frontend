<script is:inline>
        // Variables del modal
        let selectedFollowersCount = null;
        let selectedPlatform = 'instagram'; // Plataforma por defecto

        // Detectar idioma del navegador (por ejemplo: "es", "en", "fr", "pt")
        const locale = document.getElementById("lang")?.value;

        // FunciÃ³n para obtener el mensaje segÃºn el idioma
        function getMessage(key, locale = "es") {
            return MESSAGES_HERO[key]?.[locale] || MESSAGES_HERO[key]?.["en"] || "";
        }
        

        // Formulario de seguidores
        document.getElementById('formFollowers').addEventListener('submit', async function(e) {
            e.preventDefault();
            const email = document.getElementById('modalEmail').value.trim();
            const username = document.getElementById('usernameInput').value.trim();
            const error = document.getElementById('message-atention');

            // Validar selecciÃ³n de seguidores
            if (!selectedFollowersCount) {
                showError(getMessage('select_goal', locale));
                return;
            }

            // Validar email
            if (!email) {
                showError(getMessage('enter_email', locale));
                return;
            }

            // Limpiar nombre de usuario
            const cleanUsername = username.startsWith('@') ? username.slice(1) : username;

                // Guardar datos en localStorage
            localStorage.setItem('orderData', JSON.stringify({
                    username: cleanUsername,
                    platform: selectedPlatform,
                    followers: selectedFollowersCount,
                    email: email,
                    timestamp: new Date().toISOString()
            }));

                // Cerrar modal de seguidores y abrir el de pago
            closeModal();
            await openPaymentModal();
        });

            // Mostrar error con animaciÃ³n temporal
        function showError(message) {
                const error = document.getElementById('message-atention');
                error.classList.remove("hidden");
                error.innerText = message;
                setTimeout(() => {
                    error.classList.add("hidden");
                }, 5000);
        }

            // Scroll suave para navegaciÃ³n
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                });
        });

            // Seleccionar cantidad de seguidores
        function selectFollowers(count) {
                selectedFollowersCount = count;
                document.getElementById('selectedFollowers').value = count;

                // Quitar selecciÃ³n anterior
                document.querySelectorAll('.followers-option').forEach(card => {
                    card.classList.remove('selected');
                });

                // Marcar la opciÃ³n actual
                event.currentTarget.classList.add('selected');
        }
        
        // Cerrar modal de seguidores
        function closeModal() {
            document.getElementById('followersModal').classList.add('hidden');
            document.body.classList.remove('overflow-hidden');
            document.getElementById('formFollowers').reset();
            selectedFollowersCount = null;
            document.querySelectorAll('.followers-option').forEach(card => {
                card.classList.remove('selected');
            });
        }
</script>