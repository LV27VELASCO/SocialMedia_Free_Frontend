---
import { useI18n } from '../i18n';
const { translate, currentLang } = useI18n(Astro);
---

<!-- Main Content -->
<section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Page Title -->
  <div class="text-center mb-12 animate-fade-in">
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
      {translate('legal.title')} <span class="gradient-text">{translate('legal.title.span')}</span>
    </h1>
    <p class="text-xl text-gray-300">{translate('legal.subtitle')}</p>
  </div>

  <!-- Content Container -->
  <div class="bg-white/5 backdrop-blur-md rounded-2xl border border-white/10 p-8 md:p-12 space-y-8">

    <!-- Section 1: Editor del sitio web -->
    <section>
      <h2 class="text-2xl font-bold text-purple-300 mb-4 flex items-center">
        <span class="mr-3">1.</span>
        {translate('legal.editor.title')}
      </h2>
      <div class="space-y-3 text-gray-200 leading-relaxed">
        <p><strong class="text-white">{translate('legal.editor.website.title')}</strong> {translate('legal.editor.website.text')}</p>
        <p><strong class="text-white">{translate('legal.editor.editorial.title')}</strong> {translate('legal.editor.editorial.text')}</p>
        <p><strong class="text-white">{translate('legal.editor.cif.title')}</strong> {translate('legal.editor.cif.text')}</p>
        <p><strong class="text-white">{translate('legal.editor.address.title')}</strong> {translate('legal.editor.address.text')}</p>
        <p><strong class="text-white">{translate('legal.editor.email.title')}</strong> 
          <a href="mailto:contact@trendyup.es" class="text-blue-300 hover:text-blue-200 underline">{translate('legal.editor.email.text')}</a>
        </p>
      </div>
    </section>

    <!-- Section 2: Proveedor de alojamiento -->
    <section>
      <h2 class="text-2xl font-bold text-purple-300 mb-4 flex items-center">
        <span class="mr-3">2.</span>
        {translate('legal.hosting.title')}
      </h2>
      <div class="space-y-3 text-gray-200 leading-relaxed">
        <p><strong class="text-white">{translate('legal.hosting.company.title')}</strong> {translate('legal.hosting.company.text')}</p>
        <p><strong class="text-white">{translate('legal.hosting.address.title')}</strong> {translate('legal.hosting.address.text')}</p>
        <p><strong class="text-white">{translate('legal.hosting.website.title')}</strong> 
          <a href="https://www.hostinger.com/" target="_blank" rel="noopener noreferrer" class="text-blue-300 hover:text-blue-200 underline">{translate('legal.hosting.website.text')}</a>
        </p>
      </div>
    </section>

    <!-- Section 3: Propiedad intelectual -->
    <section>
      <h2 class="text-2xl font-bold text-purple-300 mb-4 flex items-center">
        <span class="mr-3">3.</span>
        {translate('legal.intellectual.title')}
      </h2>
      <div class="text-gray-200 leading-relaxed">
        <p>{translate('legal.intellectual.text')}</p>
      </div>
    </section>

    <!-- Section 4: Limitación de responsabilidad -->
    <section>
      <h2 class="text-2xl font-bold text-purple-300 mb-4 flex items-center">
        <span class="mr-3">4.</span>
        {translate('legal.liability.title')}
      </h2>
      <div class="text-gray-200 leading-relaxed">
        <p>{translate('legal.liability.text')}</p>
      </div>
    </section>

    <!-- Section 5: Datos personales -->
    <section>
      <h2 class="text-2xl font-bold text-purple-300 mb-4 flex items-center">
        <span class="mr-3">5.</span>
        {translate('legal.personal.title')}
      </h2>
      <div class="text-gray-200 leading-relaxed">
        <p>{translate('legal.personal.text')}</p>
      </div>
    </section>

    <!-- Section 6: Cookies -->
    <section>
      <h2 class="text-2xl font-bold text-purple-300 mb-4 flex items-center">
        <span class="mr-3">6.</span>
        {translate('legal.cookies.title')}
      </h2>
      <div class="text-gray-200 leading-relaxed">
        <p>{translate('legal.cookies.text')}</p>
      </div>
    </section>

    <!-- Section 7: Ley aplicable -->
    <section>
      <h2 class="text-2xl font-bold text-purple-300 mb-4 flex items-center">
        <span class="mr-3">7.</span>
        {translate('legal.law.title')}
      </h2>
      <div class="text-gray-200 leading-relaxed">
        <p>{translate('legal.law.text')}</p>
      </div>
    </section>

    <!-- Contact CTA -->
    <div class="mt-12 pt-8 border-t border-white/10">
      <div class="bg-gradient-to-r from-purple-500/20 to-blue-500/20 rounded-xl p-6 border border-purple-400/30">
        <h3 class="text-xl font-bold mb-2">{translate('legal.contactCTA.title')}</h3>
        <p class="text-gray-300 mb-4">{translate('legal.contactCTA.text')}</p>
        <a href={`/${currentLang}/contact`} class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-500 to-blue-600 rounded-lg font-semibold hover:from-purple-600 hover:to-blue-700 transition-all duration-300 shadow-lg hover:shadow-xl">
          {translate('legal.contactCTA.button')}
        </a>
      </div>
    </div>
  </div>

  <!-- Related Links -->
  <div class="mt-8 text-center">
    <p class="text-gray-300 mb-4">{translate('legal.related.title')}</p>
    <div class="flex flex-wrap justify-center gap-4">
      <a href={`/${currentLang}/privacity`} class="text-blue-300 hover:text-blue-200 underline">{translate('legal.related.privacy.text')}</a>
      <a href={`/${currentLang}/terms`} class="text-blue-300 hover:text-blue-200 underline">{translate('legal.related.terms.text')}</a>
      <a href={`/${currentLang}/refund-policy`} class="text-blue-300 hover:text-blue-200 underline">{translate('legal.related.refund.text')}</a>
      <a href={`/${currentLang}/disclaimer`} class="text-blue-300 hover:text-blue-200 underline">{translate('legal.related.disclaimer.text')}</a>
    </div>
  </div>
</section>


<!-- Scroll to Top Button -->
<button id="scrollToTop"
    class="fixed  bottom-8 right-8 w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-full shadow-lg hover:scale-110 transform transition-all duration-300 opacity-0 pointer-events-none z-50">
    ↑
</button>
<!-- JavaScript -->
<script is:inline>
    // Scroll to top functionality
    const scrollToTopBtn = document.getElementById("scrollToTop");

    window.addEventListener("scroll", () => {
        if (window.pageYOffset > 300) {
            scrollToTopBtn.style.opacity = "1";
            scrollToTopBtn.style.pointerEvents = "auto";
        } else {
            scrollToTopBtn.style.opacity = "0";
            scrollToTopBtn.style.pointerEvents = "none";
        }
    });

    scrollToTopBtn.addEventListener("click", () => {
        window.scrollTo({
            top: 0,
            behavior: "smooth",
        });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute("href"));
            if (target) {
                target.scrollIntoView({
                    behavior: "smooth",
                    block: "start",
                });
            }
        });
    });

    // Add entrance animations to sections
    const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = "1";
                entry.target.style.transform = "translateY(0)";
            }
        });
    }, observerOptions);

    // Observe all sections
    document.querySelectorAll("section").forEach((section) => {
        section.style.opacity = "0";
        section.style.transform = "translateY(20px)";
        section.style.transition = "all 0.6s ease-out";
        observer.observe(section);
    });
</script>
