<script is:inline>

    let progress = 0;
    const progressBar = document.getElementById("progressBar");
    const progressPercent = document.getElementById("progressPercent");

    // Duraci√≥n total en ms (5 min)
    const totalDuration = 5 * 60 * 1000; 
    const interval = 2000; // cada 2 segundos
    const totalSteps = totalDuration / interval; 
    const baseIncrement = 100 / totalSteps; // avance base por tick

    function updateProgress() {
        // Avance base + peque√±o factor aleatorio
        const randomFactor = Math.random() * 0.5 + 0.75; // 75% a 125% del paso
        progress += baseIncrement * randomFactor;

        if (progress > 100) progress = 100;

        progressBar.style.width = progress + "%";
        progressPercent.textContent = Math.round(progress) + "% completado";

        if (progress < 100) {
            setTimeout(updateProgress, interval);
        } else {
            progressPercent.textContent = "‚úÖ Completado";
            updateStatusTimeline();
        }
    }

